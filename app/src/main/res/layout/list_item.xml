<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name_list"
            style="@style/product_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dimen"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/product_price_list"
            style="@style/product_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dimen"
            android:layout_weight="1"
            tools:text="@string/product_name_head" />

        <TextView
            android:id="@+id/in_stock"
            style="@style/product_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dimen"
            android:layout_weight="1"
            tools:text="@string/product_name_head" />
    </LinearLayout>

    <Button
        android:id="@+id/buy_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/ic_add_shopping_cart_grey_32dp"
        android:focusable="false"
        android:padding="@dimen/buy_button_padding"
        android:text="@string/buy_product" />

</RelativeLayout>